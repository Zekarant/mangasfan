{% extends 'layouts/base.html.twig' %}

{% block title %}Index test de Mangas'Fan V7 sous Symfony{% endblock %}

{% block body %}
    <h1>Test de MF sous Symfony - {{ news|length }} news</h1>
    {% for new in news %}
        <article>
            <h2><a href="{{ path('app_news_show', {id: new.id}) }}">{{ new.title }}</a></h2>
            <p>{{ new.description|u.truncate(200, '...', false) }}</p>
            <p>Post√©e le {{ new.createdAt|date("d/m/Y") }}</p>
            <img src="{{ new.image }}" alt="Image de {{ new.title }}"/>
        </article>
    {% endfor %}
{% endblock %}
